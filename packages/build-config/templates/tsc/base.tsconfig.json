{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,
    "target": "es2024",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2024"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "types": []
  }
}

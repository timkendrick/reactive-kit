{
  "private": true,
  "name": "@reactive-kit/loader",
  "version": "0.0.1",
  "license": "MIT",
  "description": "ReactiveKit ESM loader",
  "author": "Tim Kendrick <timkendrick@gmail.com>",
  "type": "module",
  "main": "./lib.ts",
  "module": "./lib.ts",
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:docs && pnpm run build:pkg",
    "build:lib": "vite build",
    "build:docs": "typedoc",
    "build:pkg": "pkg . ./dist/package.json",
    "lint": "pnpm run '/^lint:.*/'",
    "lint:eslint": "eslint --ext js,jsx,cjs,mjs,ts,tsx,cts,mts .",
    "lint:typescript": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "pkg": {
    "type": "module",
    "module": "/lib/lib.js",
    "types": "./lib.d.ts",
    "exports": {
      ".": {
        "import": "./lib/lib.js"
      }
    }
  },
  "devDependencies": {
    "@reactive-kit/build-config": "workspace:*",
    "@reactive-kit/compiler": "workspace:*"
  },
  "peerDependencies": {
    "eslint": "^8",
    "typedoc": "^0.28",
    "typescript": "^5",
    "vite": "^6",
    "vitest": "^3"
  }
}
